# Copy these to Railway Dashboard → Variables → RAW Editor
# Replace values with your actual credentials from root .env file

NODE_ENV=production
PORT=${{PORT}}
CORS_ORIGIN=https://your-frontend.vercel.app

# Firebase (copy from root .env)
FIREBASE_PROJECT_ID=ciis-2882b
FIREBASE_CLIENT_EMAIL=firebase-adminsdk-fbsvc@ciis-2882b.iam.gserviceaccount.com
FIREBASE_PRIVATE_KEY="-----BEGIN PRIVATE KEY-----\nYOUR_PRIVATE_KEY_HERE\n-----END PRIVATE KEY-----"
FIREBASE_STORAGE_BUCKET=ciis-2882b.appspot.com

# OR use FIREBASE_SERVICE_ACCOUNT_KEY (copy from root .env)
# FIREBASE_SERVICE_ACCOUNT_KEY={"type":"service_account",...}

# Gemini AI (copy from root .env)
GOOGLE_GEMINI_API_KEY=your-gemini-api-key-here

# Email Configuration (Gmail SMTP - Free)
EMAIL_USER=your-gmail@gmail.com
EMAIL_PASSWORD=your-gmail-app-password-here

# Frontend URL (for links in emails)
FRONTEND_URL=https://your-frontend.vercel.app

# Optional
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
